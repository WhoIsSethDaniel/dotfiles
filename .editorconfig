root = true
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
max_line_length = 120
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 4

[*.vim]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2

[*.go]
indent_size = 4
indent_style = tab
tab_width = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_style = tab
