HashKnownHosts no
NoHostAuthenticationForLocalhost yes
ServerAliveInterval 30
GSSAPIAuthentication no

# multiplex sessions over one connection
ControlMaster auto
ControlPath   ~/.ssh/control/ssh_mux_%h_%p_%r
ControlPersist yes

Include ~/.config/dotfiles/main/ssh/config

Host github.com
  IdentityFile ~/.ssh/login-keys.d/github_id_ed25519
  IdentitiesOnly yes
